<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ChessGameMAUI.Views.CaseView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Border x:Name="FondCase"
            StrokeThickness="0"
            BackgroundColor="Transparent"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Padding="2"
            Margin="0">

        <!-- Image de la pièce avec ombre améliorée -->
        <Image x:Name="ImagePiece"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="False"
               InputTransparent="True"
               IsOpaque="True"
               Margin="6">

            <Image.Shadow>
                <Shadow Brush="#000000"
                        Radius="12"
                        Opacity="0.5"
                        Offset="0,4"/>
            </Image.Shadow>
        </Image>

    </Border>

</ContentView>
