<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChessGameMAUI.Views.EchiquierPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChessGameMAUI.Views"
    BackgroundColor="#0F0F1A">

    <ScrollView Orientation="Both"
                HorizontalScrollBarVisibility="Never"
                VerticalScrollBarVisibility="Never">
        <Grid x:Name="MainGrid"
              Padding="10"
              ColumnSpacing="10"
              RowSpacing="10">

            <!-- Plateau (Echiquier) - Responsive -->
            <ScrollView x:Name="EchiquierScroll"
                        Grid.Column="0"
                        Grid.Row="0"
                        Orientation="Both"
                        HorizontalScrollBarVisibility="Never"
                        VerticalScrollBarVisibility="Never">
                <views:EchiquierView x:Name="Echiquier"
                                     VerticalOptions="Start"
                                     HorizontalOptions="Center"
                                     Margin="0"/>
            </ScrollView>

            <!-- Infos de la partie - Responsive -->
            <views:InfoPartieView x:Name="Infos"
                                  Grid.Column="1"
                                  Grid.Row="0"
                                  Padding="0"
                                  Margin="0"
                                  VerticalOptions="Fill"
                                  HorizontalOptions="Fill"/>

        </Grid>
    </ScrollView>
</ContentPage>
