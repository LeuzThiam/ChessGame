<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ChessGameMAUI.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentView.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#3b3028" />
            <Setter Property="TextColor" Value="#f5e3c8" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="HeightRequest" Value="58" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </ContentView.Resources>

    <Grid x:Name="RootGrid"
          RowDefinitions="Auto,*"
          Padding="24">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1a1511" Offset="0"/>
                <GradientStop Color="#2d241d" Offset="0.5"/>
                <GradientStop Color="#1a1511" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Header -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,Auto"
              Margin="0,0,0,16">
            <VerticalStackLayout Spacing="2">
                <Label Text="Chess Game"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#f5f5f5"/>
                <Label Text="Jouez, entraînez-vous, reprenez vos parties"
                       FontSize="13"
                       TextColor="#bfc4d2"/>
            </VerticalStackLayout>
            <Frame Grid.Column="1"
                   Padding="10,6"
                   CornerRadius="12"
                   BackgroundColor="#1f2836"
                   VerticalOptions="Center">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="Profil"
                           FontSize="12"
                           TextColor="#bfc4d2"
                           VerticalOptions="Center"/>
                    <Label x:Name="LblProfil"
                           Text="Invité"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#f5f5f5"
                           VerticalOptions="Center"/>
                    <Button Text="Changer"
                            Clicked="BtnConnexion_Click"
                            BackgroundColor="#2f80ed"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="32"
                            Padding="10,0"/>
                </HorizontalStackLayout>
            </Frame>
        </Grid>

        <!-- Menu principal vertical -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">
                <Button Text="Jouer"
                        Style="{StaticResource MenuButtonStyle}"
                        BackgroundColor="#27ae60"
                        Clicked="BtnJouer_Click"/>
                <Button x:Name="BtnQuitter"
                        Text="Quitter"
                        Style="{StaticResource MenuButtonStyle}"
                        Clicked="BtnQuitter_Click"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentView>
